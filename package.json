{
  "name": "turtlecoin-rpc",
  "version": "4.0.0",
  "description": "TurtleCoin RPC API Interface in NodeJS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "docs": "./node_modules/.bin/typedoc && touch docs/.nojekyll",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run docs && npm run webpack",
    "style": "./node_modules/.bin/tslint -c tslint.json --project .",
    "fix-style": "./node_modules/.bin/tslint -c tslint.json --fix --project .",
    "test": "npm run style && npm run build",
    "mocha": "./node_modules/.bin/mocha --require ts-node/register test/test.ts",
    "webpack": "./node_modules/.bin/webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turtlecoin/turtlecoin-rpc-js.git"
  },
  "keywords": [
    "TurtleCoin",
    "RPC",
    "API"
  ],
  "author": "Brandon Lehmann <brandonlehmann@gmail.com>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/turtlecoin/turtlecoin-rpc-js/issues"
  },
  "homepage": "https://github.com/turtlecoin/turtlecoin-rpc-js#readme",
  "standard": {
    "ignore": [
      "dist/*",
      "docs/*"
    ]
  },
  "dependencies": {
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.0",
    "@types/request-promise-native": "^1.0.17",
    "mocha": "^7.1.1",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "typedoc": "^0.17.4",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  }
}
